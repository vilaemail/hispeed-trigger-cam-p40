<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF303030">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Engine Selection -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_engine"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <RadioGroup
            android:id="@+id/engineRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radioHuaweiSdk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/engine_huawei_sdk"
                android:textColor="@android:color/white"
                android:buttonTint="#FF4CAF50"
                android:padding="8dp" />

            <RadioButton
                android:id="@+id/radioCamera2Direct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/engine_camera2_direct"
                android:textColor="@android:color/white"
                android:buttonTint="#FF4CAF50"
                android:padding="8dp"
                android:visibility="gone" />

            <RadioButton
                android:id="@+id/radioCustomSdk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/engine_custom_sdk"
                android:textColor="@android:color/white"
                android:buttonTint="#FF4CAF50"
                android:padding="8dp" />
        </RadioGroup>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FF555555"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />

        <!-- FPS Selection -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_fps"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <RadioGroup
            android:id="@+id/fpsRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radio1920fps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fps_1920"
                android:textColor="@android:color/white"
                android:buttonTint="#FF4CAF50"
                android:padding="8dp" />

            <RadioButton
                android:id="@+id/radio960fps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fps_960"
                android:textColor="@android:color/white"
                android:buttonTint="#FF4CAF50"
                android:padding="8dp" />
        </RadioGroup>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FF555555"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />

        <!-- HTTP Server -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/settings_http_server"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Switch
                android:id="@+id/serverSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:thumbTint="#FF4CAF50"
                android:trackTint="#FF888888" />
        </LinearLayout>

        <TextView
            android:id="@+id/serverInfoText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFCCCCCC"
            android:textSize="13sp"
            android:paddingStart="8dp"
            android:paddingTop="4dp"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FF555555"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />

        <!-- Remote Triggering -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/settings_remote_trigger"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Switch
                android:id="@+id/remoteTriggerSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:thumbTint="#FF4CAF50"
                android:trackTint="#FF888888" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/serialDeviceSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/serialDeviceInfoText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFCCCCCC"
                android:textSize="13sp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp"
                android:text="Auto-connects to first available USB serial device." />

            <!-- ESP Parameters -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ESP Trigger Parameters"
                android:textColor="#FFCCCCCC"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_esp_led_pin"
                        android:textColor="#FFAAAAAA"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/espLedPinEdit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:backgroundTint="#FF4CAF50" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_esp_led_on_ms"
                        android:textColor="#FFAAAAAA"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/espLedOnMsEdit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:backgroundTint="#FF4CAF50" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_esp_cooldown_s"
                        android:textColor="#FFAAAAAA"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/espCooldownSEdit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:backgroundTint="#FF4CAF50" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_esp_trigger_delay_ms"
                        android:textColor="#FFAAAAAA"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/espTriggerDelayMsEdit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:backgroundTint="#FF4CAF50" />
                </LinearLayout>
            </LinearLayout>

            <!-- GPIO Triggers -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings_esp_triggers"
                android:textColor="#FFAAAAAA"
                android:textSize="12sp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="4dp" />

            <LinearLayout
                android:id="@+id/triggersContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <Button
                android:id="@+id/addTriggerButton"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="@string/settings_add_trigger"
                android:textSize="12sp"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/espValidationText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFF5252"
                android:textSize="12sp"
                android:paddingTop="4dp"
                android:visibility="gone" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FF555555"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />

        <!-- Push to External Drive -->
        <Button
            android:id="@+id/pushExternalButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_push_external"
            android:textColor="@android:color/white"
            android:backgroundTint="#FF4CAF50"
            android:padding="12dp" />

        <TextView
            android:id="@+id/pushStatusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFCCCCCC"
            android:textSize="13sp"
            android:paddingStart="8dp"
            android:paddingTop="4dp"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FF555555"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />

        <!-- Clear All Recordings -->
        <Button
            android:id="@+id/clearRecordingsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_clear_recordings"
            android:textColor="@android:color/white"
            android:backgroundTint="#FFD32F2F"
            android:padding="12dp" />

        <TextView
            android:id="@+id/clearRecordingsStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFCCCCCC"
            android:textSize="13sp"
            android:paddingStart="8dp"
            android:paddingTop="4dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/clearExternalButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_clear_external"
            android:textColor="@android:color/white"
            android:backgroundTint="#FFD32F2F"
            android:padding="12dp"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/clearExternalStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFCCCCCC"
            android:textSize="13sp"
            android:paddingStart="8dp"
            android:paddingTop="4dp"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FF555555"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />

        <!-- About -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_about"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/aboutText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFCCCCCC"
            android:textSize="14sp"
            android:lineSpacingMultiplier="1.3"
            android:padding="8dp" />

        <TextView
            android:id="@+id/githubLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_github"
            android:textColor="#FF4CAF50"
            android:textSize="14sp"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>
</ScrollView>
