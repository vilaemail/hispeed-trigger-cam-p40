<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF303030">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Engine Selection -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_engine"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <RadioGroup
            android:id="@+id/engineRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radioHuaweiSdk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/engine_huawei_sdk"
                android:textColor="@android:color/white"
                android:buttonTint="#FF4CAF50"
                android:padding="8dp" />

            <RadioButton
                android:id="@+id/radioCamera2Direct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/engine_camera2_direct"
                android:textColor="@android:color/white"
                android:buttonTint="#FF4CAF50"
                android:padding="8dp"
                android:visibility="gone" />

            <RadioButton
                android:id="@+id/radioCustomSdk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/engine_custom_sdk"
                android:textColor="@android:color/white"
                android:buttonTint="#FF4CAF50"
                android:padding="8dp" />
        </RadioGroup>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FF555555"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />

        <!-- FPS Selection -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_fps"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <RadioGroup
            android:id="@+id/fpsRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radio1920fps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fps_1920"
                android:textColor="@android:color/white"
                android:buttonTint="#FF4CAF50"
                android:padding="8dp" />

            <RadioButton
                android:id="@+id/radio960fps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fps_960"
                android:textColor="@android:color/white"
                android:buttonTint="#FF4CAF50"
                android:padding="8dp" />
        </RadioGroup>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FF555555"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />

        <!-- HTTP Server -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/settings_http_server"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Switch
                android:id="@+id/serverSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:thumbTint="#FF4CAF50"
                android:trackTint="#FF888888" />
        </LinearLayout>

        <TextView
            android:id="@+id/serverInfoText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFCCCCCC"
            android:textSize="13sp"
            android:paddingStart="8dp"
            android:paddingTop="4dp"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FF555555"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />

        <!-- Push to External Drive -->
        <Button
            android:id="@+id/pushExternalButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_push_external"
            android:textColor="@android:color/white"
            android:backgroundTint="#FF4CAF50"
            android:padding="12dp" />

        <TextView
            android:id="@+id/pushStatusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFCCCCCC"
            android:textSize="13sp"
            android:paddingStart="8dp"
            android:paddingTop="4dp"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FF555555"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />

        <!-- About -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_about"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/aboutText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFCCCCCC"
            android:textSize="14sp"
            android:lineSpacingMultiplier="1.3"
            android:padding="8dp" />

        <TextView
            android:id="@+id/githubLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_github"
            android:textColor="#FF4CAF50"
            android:textSize="14sp"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>
</ScrollView>
